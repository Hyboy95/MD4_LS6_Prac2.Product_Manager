<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous">
        <title>Document</title>
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Navbar</a>
                    <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse"
                        id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page"
                                    href="#">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#"
                                    id="navbarDropdown"
                                    role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Employee Manager
                                </a>
                                <ul class="dropdown-menu"
                                    aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/">List
                                            Staff</a></li>
                                    <li><a class="dropdown-item" href="/create">Add
                                            New Staff</a></li>
                                </ul>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-2" type="search"
                                placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success"
                                type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </nav>

            <a class="btn btn-primary mt-3" href="/create">Add New Staff</a>

            <div class="card mt-2">
                <div
                    class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <form action="/" method="post" id="formSize">
                            <select name="size" id="size_page"
                                onchange="submitForm()">
                                <option value="<%= limit %>" selected><%= limit
                                    %></option>
                                <% let arr = [3, 5, 10]
                                arr.forEach(item => {
                                if (item != limit) {%>
                                <option value="<%= item %>"><%= item %></option>
                                <%}
                                });
                                %>
                            </select>
                            <label for="size_page">Items/Page</label>
                        </form>
                    </div>
                    <div><h3>List Staffs</h2></div>
                    <div><b>Total: <%= totalItem %></b></div>
                </div>
                <div class="card-body">
                    <table
                        class="table table-striped table-bordered table-hover text-center align-middle">
                        <tr>
                            <th>#</th>
                            <th>Avatar</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Producer</th>
                            <th>Options</th>
                        </tr>
                        <% if (products.length === 0) { %>
                            <tr>No-data</tr>
                        <% } %>
                        <% products.forEach((product, index) => { %>
                        <tr>
                            <td><%= index + 1%></td>
                            <td class="col-1">
                                <img src="<%= product.avatar %>"
                                    class="img-fluid" alt="lá»—i">
                            </td>
                            <td><%= product.name %></td>
                            <td><%= product.price %></td>
                            <td><%= product.producer %></td>
                            <td>
                                <a
                                    onclick="return confirm('Are you sure you want to delete this staff?')"
                                    href="/delete?page=<%= pageCurrent %>&limit=<%= limit %>&id=<%= product.id %>"
                                    class="btn btn-danger">Delete</a>
                                <a
                                    href="/update?page=<%= pageCurrent %>&limit=<%= limit %>&id=<%= product.id %>"
                                    class="btn btn-primary">Update</a>
                            </td>
                        </tr>
                        <% })%>
                    </table>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <% if (pageCurrent === 1) {%>
                            <li class="page-item d-none">
                                <a class="page-link" href="/">Pre</a>
                            </li>
                            <% } else { %>
                            <li class="page-item">
                                <a class="page-link" id="prePage"
                                    href="/?page=<%= pageCurrent - 1 %>&limit=<%= limit %>">Pre</a>
                            </li>
                            <% } %>
                            <% for (let i = 1; i <= totalPage; i++) {
                            if (pageCurrent === i) {%>
                            <li class="page-item active" aria-current="page">
                                <a class="page-link"
                                    href="/?page=<%= i %>&limit=<%= limit %>"><%=
                                    i %></a>
                            </li>
                            <% } else { %>
                            <li class="page-item">
                                <a class="page-link"
                                    href="/?page=<%= i %>&limit=<%= limit %>"><%=
                                    i %></a>
                            </li>
                            <% }
                            } %>
                            <% if (pageCurrent === totalPage) {%>
                            <li class="page-item d-none">
                                <a class="page-link" href="/">Next</a>
                            </li>
                            <% } else { %>
                            <li class="page-item">
                                <a class="page-link" id="prePage"
                                    href="/?page=<%= pageCurrent + 1 %>&limit=<%= limit %>">Next</a>
                            </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    </body>
    <script
        src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous">
  </script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous">
  </script>

    <script>
    function submitForm() {
      document.getElementById("formSize").submit();
    }
  </script>
</html>